<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hongseokandrewjang.android.materialdesign_propertyanimation_spreadcube.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPREAD"
        android:id="@+id/toggleBtn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:onClick="toggle"
        android:nestedScrollingEnabled="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="RED"
            android:id="@+id/redBtn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/RED" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="BLUE"
            android:id="@+id/blueBtn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/BLUE" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="YELLOW"
            android:id="@+id/yellowBtn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/YELLOW" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="BLACK"
            android:textColor="@color/WHITE"
            android:id="@+id/blackBtn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/BLACK" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="PRIMARY"
            android:id="@+id/primaryBtn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/PRIMARY" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="PRIMARY DARK"
            android:id="@+id/primaryDarkBtn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/PRIMARYDARK" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="ACCENT"
            android:id="@+id/accentBtn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/ACCENT" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="GREEN"
            android:id="@+id/greenBtn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/GREEN" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="BROWN"
            android:textColor="@color/WHITE"
            android:id="@+id/brownBtn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/BROWN" />
    </RelativeLayout>


</RelativeLayout>
