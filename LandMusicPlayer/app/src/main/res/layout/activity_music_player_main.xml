<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_music_player_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hongseokandrewjang.android.landmusicplayer.MusicPlayerMain">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="com.hongseokandrewjang.android.landmusicplayer.ListFragment"
        android:id="@+id/listFragment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="504dp"
        android:layout_marginEnd="504dp"
        tools:layout="@layout/fragment_list" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.hongseokandrewjang.android.landmusicplayer.DetailFragment"
        android:id="@+id/detailFragment"
        android:layout_alignRight="@id/listFragment"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/fragment_detail" />


</RelativeLayout>
