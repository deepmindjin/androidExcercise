<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hongseokandrewjang.android.basiclist1.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTVIEW1"
        android:id="@+id/listView1btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTVIEW2"
        android:id="@+id/listView2btn"
        android:layout_below="@+id/listView1btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIST CUSTOM"
        android:id="@+id/listCustombtn"
        android:layout_below="@+id/listView2btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRIDVIEW"
        android:id="@+id/gridViewbtn"
        android:layout_below="@+id/listCustombtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRID CUSTOM"
        android:id="@+id/gridCustombtn"
        android:layout_below="@+id/listCustombtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXPANDABLELIST"
        android:id="@+id/expandableListbtn"
        android:layout_below="@+id/gridCustombtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECYCLER VIEW"
        android:id="@+id/recyclerViewbtn"
        android:layout_below="@+id/expandableListbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECYCLER ANIMATION VIEW"
        android:id="@+id/recyclerAnimationViewBtn"
        android:layout_below="@+id/recyclerViewbtn"
        android:layout_alignRight="@+id/recyclerViewbtn"
        android:layout_alignEnd="@+id/recyclerViewbtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECYCLER CARD VIEW"
        android:id="@+id/recyclerCardViewBtn"
        android:layout_below="@+id/recyclerAnimationViewBtn"
        android:layout_alignRight="@+id/gridCustombtn"
        android:layout_alignEnd="@+id/gridCustombtn" />
</RelativeLayout>
